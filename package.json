{
  "name": "chatting",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "main": "electron/main/index.mjs",
  "scripts": {
    "dev:web": "vite",
    "build:web": "tsc -b && vite build",
    "dev": "concurrently \"cross-env NODE_ENV=development BROWSER=none vite\" \"wait-on http://localhost:5173 && electron .\"",
    "build": "vite build && electron-builder",
    "build:win": "yarn build --win --x64",
    "lint": "eslint ."
  },
  "build": {
    "appId": "CHATTING",
    "productName": "CHATTING",
    "copyright": "Copyright Â© 2025 Seungyoon Yu",
    "mac": {
      "icon": "./public/icons/mac/icon.icns",
      "category": "public.app-category.utilities"
    },
    "win": {
      "icon": "./public/icons/png/256x256.png"
    },
    "files": [
      "./dist/**/*",
      "./node_modules/**/*",
      "./public/**/*",
      "*.js"
    ],
    "directories": {
      "buildResources": "public"
    }
  },
  "dependencies": {
    "@emotion/react": "^11.11.4",
    "@emotion/styled": "^11.11.0",
    "@reactivex/rxjs": "^6.6.7",
    "classnames": "^2.5.1",
    "electron-is-dev": "^3.0.1",
    "emotion-normalize": "^11.0.1",
    "jotai": "^2.12.3",
    "jotai-devtools": "^0.11.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-router": "^7.5.2",
    "react-uid": "^2.3.3",
    "swr": "^2.3.3",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.22.0",
    "@types/react": "^19.0.10",
    "@types/react-dom": "^19.0.4",
    "@vitejs/plugin-react-swc": "^3.8.0",
    "concurrently": "^9.1.2",
    "cross-env": "^7.0.3",
    "electron": "^35.2.1",
    "electron-builder": "26.0.12",
    "eslint": "^9.22.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "globals": "^16.0.0",
    "typescript": "~5.7.2",
    "typescript-eslint": "^8.26.1",
    "vite": "^6.3.1",
    "vite-tsconfig-paths": "^5.1.4",
    "wait-on": "^8.0.3"
  },
  "packageManager": "yarn@4.9.1"
}
